rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User session recordings - users can only access their own recordings
    match /users/{userId}/recordings/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Community shared videos - publicly readable, owner writable
    match /community/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Guide assets - publicly readable, admin only write
    match /guides/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
